{
  "extends": ["next/core-web-vitals", "eslint:recommended"],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "semi": [2, "never"],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-unused-vars": "warn"
  }
}